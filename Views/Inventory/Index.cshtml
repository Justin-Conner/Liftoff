@model List<Moonwalkers.Models.Inventory>



<h1>All Inventory Items</h1>

@if (Model.Count == 0)
{
    <p>No Inventory yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Category Name</th>
        </tr>
        @foreach (Inventory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}

<p>
    <a asp-controller="Inventory" asp-action="Add">Add Inventory</a>
</p>

<p>
    <a asp-controller="Inventory" asp-action="Delete">Delete Category</a>
</p>
