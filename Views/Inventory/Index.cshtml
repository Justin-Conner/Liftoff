@using Moonwalkers.Models
@model List<Inventory>

<h1>Moonwalkers</h1>

<p>
    <a asp-controller="Inventory" asp-action="Add">Add Inventory</a>
</p>

<p>
    <a asp-controller="Inventory" asp-action="Delete">Delete Inventory</a>
</p>

@if (Model.Count == 0)
{
    <p>No inventory yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Product
            </th>
            <th>
                Description
            </th>

            <th>
                Supplier
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Product</td>
                <td>@evt.Description </td>
                <td>@evt.Supplier</td>
            </tr>
        }
    </table>
}