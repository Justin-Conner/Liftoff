
@using Moonwalkers.Models
@model List<Inventory>

<h1>Inventories</h1>

<p>
    <a asp-controller="Inventories" asp-action="Add">Add Inventory</a>
</p>

<p>
    <a asp-controller="Inventories" asp-action="Delete">Delete Inventory</a>
</p>

@if (Model.Count == 0)
{
    <p>No inventory yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Contact Email
            </th>
            <th>
                Inventory Type
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description </td>
                <td>@evt.ContactEmail</td>
                <td>@evt.Type</td>
            </tr>
        }
    </table>
}
